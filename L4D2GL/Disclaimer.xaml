<Window x:Class="L4D2GL.Disclaimer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Disclaimer" Height="280" Width="317" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Disclaimer" Height="34" HorizontalAlignment="Left" Name="label1" VerticalAlignment="Top" Width="117" FontSize="20" FontWeight="Bold" />
        <TextBox Height="164" HorizontalAlignment="Left" Margin="0,40,0,0" Name="uxDisclaimerText" VerticalAlignment="Top" Width="294" IsEnabled="True" IsReadOnly="True" DataContext="{Binding}" Text="" AcceptsReturn="True" AcceptsTab="False" TextWrapping="Wrap" />
        <Button Content="Accept" Height="23" HorizontalAlignment="Left" Margin="12,210,0,0" Name="uxAccept" VerticalAlignment="Top" Width="75" Click="uxAccept_Click" IsEnabled="False" />
        <Button Content="Decline" Height="23" HorizontalAlignment="Left" Margin="211,210,0,0" Name="uxDecline" VerticalAlignment="Top" Width="75" Click="uxDecline_Click" />
    </Grid>
</Window>
